# AWS設定
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3設定
AWS_S3_BUCKET=minext-videos-xxxxx
AWS_S3_REGION=ap-northeast-1

# CloudFront設定
AWS_CLOUDFRONT_DOMAIN=xxxxx.cloudfront.net
AWS_CLOUDFRONT_DISTRIBUTION_ID=EXXXXXXXXX

# データベース（本番環境）
DATABASE_URL=postgresql://username:password@host:5432/database_name

# アプリケーション設定
RACK_ENV=production
SECRET_KEY_BASE=your_secret_key_here

# ポート
PORT=4567

# Puma設定
WEB_CONCURRENCY=2
RAILS_MAX_THREADS=5

# Docker環境（docker-compose使用時）
# PostgreSQL設定
POSTGRES_USER=minext
POSTGRES_PASSWORD=minext_password
POSTGRES_DB=minext_production

# Redis設定（オプション）
REDIS_URL=redis://redis:6379/0